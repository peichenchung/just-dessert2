<div class="container">

  <h2>甜點分類總表</h2>

  <div class="row">

    <div class="col-md-12">

      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>Category Name</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
          <tr>
            <th scope="row"><%= category.id %></th>
            <td><%= category.area %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>

  </div>
</div>